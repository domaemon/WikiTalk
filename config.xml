<?xml version="1.0" encoding="utf-8"?>
<widget id="com.konekutolabo.wikitalk" version="2.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WikiTalk</name>
    <description>
      An Android Cordova application that reads Wikipedia for you.
    </description>
    <author email="makoto.sugano@gmail.com" href="https://github.com/domaemon/WikiTalk">
      Makoto SUGANO
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
	<splash src="res/screen/android/wikitalk-splash-port-ldpi.png" density="ldpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-mdpi.png" density="mdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-hdpi.png" density="hdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-xhdpi.png" density="xhdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-xxhdpi.png" density="xxhdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-xxxhdpi.png" density="xxxhdpi"/>

	<splash src="res/screen/android/wikitalk-splash-port-ldpi.png" density="port-ldpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-mdpi.png" density="port-mdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-hdpi.png" density="port-hdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-xhdpi.png" density="port-xhdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-xxhdpi.png" density="port-xxhdpi"/>
	<splash src="res/screen/android/wikitalk-splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
	
	<resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />

	<icon background="@color/background" density="ldpi" foreground="res/icon/android/wikitalk-icon-ldpi.png" />
	<icon background="@color/background" density="mdpi" foreground="res/icon/android/wikitalk-icon-mdpi.png" />
	<icon background="@color/background" density="hdpi" foreground="res/icon/android/wikitalk-icon-hdpi.png" />
	<icon background="@color/background" density="xhdpi" foreground="res/icon/android/wikitalk-icon-xhdpi.png" />
	<icon background="@color/background" density="xxhdpi" foreground="res/icon/android/wikitalk-icon-xxhdpi.png" />
	<icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/wikitalk-icon-xxxhdpi.png" />

	<!--
	    Icons:
	    
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
	-->
	<!--
	    Splash:

            ldpi    : 200x320 px
            mdpi    : 320x480 px
            hdpi    : 480x800 px
            xhdpi   : 720x1280 px
            xxhdpi  : 960x1600 px
            xxxhdpi : 1280x1920 px
	-->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
