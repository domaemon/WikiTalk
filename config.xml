<?xml version='1.0' encoding='utf-8'?>
<widget id="com.konekutolab.wikitalk" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WikiTalk</name>
    <description>
      An Android Cordova application that reads Wikipedia for you.
    </description>
    <author email="makoto.sugano@gmail.com" href="https://github.com/domaemon/WikiTalk">
      Makoto SUGANO
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
